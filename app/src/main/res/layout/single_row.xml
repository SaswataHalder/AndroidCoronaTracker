<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="30sp"
    app:cardCornerRadius="5sp"
    android:padding="5sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/country_name"/>

        <TextView
            android:id="@+id/country_total_confirmed_cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Total Confirmed Cases"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/country_total_death_cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Total Death Cases"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/country_total_recovered_cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Total Recovered Cases"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>